  entities: [SellerProfile]
}

query getSellerListings {
  fn: import { getSellerListings } from "@src/seller/operations",
  entities: [Book, Category, SellerProfile]
}

query getSellerStats {
  fn: import { getSellerStats } from "@src/seller/operations",
